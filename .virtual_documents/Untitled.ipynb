   # plt.plot(x, np.imag(psi_x),color='orange', label=r'Im{ψ(x)}')
   # plt.plot(x, np.real(psi_x),color='green', label=r'Re{ψ(x)}')
    plt.plot(x, V / abs(V0), 'k--', label='Potencial (normalizado)')
    plt.xlabel("x")
