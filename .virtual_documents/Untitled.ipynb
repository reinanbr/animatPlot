U_x = np.exp(-1j * V * dt)           # Parte potencial no espaço x

# Evolução temporal
t = 0
plt.figure(figsize=(16,9))
plots_list = []
i = 0
while t < t_max:
    # Evolução em meio passo no espaço k
    psi_k = U_k * psi_k
